<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.total %></td>
        <td><%= order.customer %></td>
        <td><%= link_to 'Show', order %></td>
        <td> <% if current_customer && order.customer == current_customer %><%= link_to 'Edit', edit_order_path(order)%><% end %></td>
        <td><% if current_customer && order.customer == current_customer %><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %><% end %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- if current user show link below -->
<%= link_to 'New Order', new_order_path %>
