<p id="notice"><%= notice %></p>

<h1>Order Rows</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Order</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_rows.each do |order_row| %>
      <tr>
        <td><%= order_row.item %></td>
        <td><%= order_row.order %></td>
        <td><%= order_row.quantity %></td>
        <td><%= link_to 'Show', order_row %></td>
        <td><%= link_to 'Edit', edit_order_row_path(order_row) %></td>
        <td><%= link_to 'Destroy', order_row, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

